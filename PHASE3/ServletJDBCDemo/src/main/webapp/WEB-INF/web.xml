<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>ServletJDBCDemo</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.xhtml</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>ConnectionURL</param-name>
		<param-value>jdbc:mysql://localhost:3306/estore</param-value>
	</context-param>

	<context-param>
		<param-name>DBAdminName</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>DBAdminPassword</param-name>
		<param-value>rootroot</param-value>
	</context-param>

	<servlet>
		<servlet-name>ProductsServlet</servlet-name>
		<servlet-class>com.sl.ProductsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ProductsServlet</servlet-name>
		<url-pattern>/products</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>NewProductServlet</servlet-name>
		<servlet-class>com.sl.NewProductServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>NewProductServlet</servlet-name>
		<url-pattern>/new-product</url-pattern>
	</servlet-mapping>


</web-app>
